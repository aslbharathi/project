{
  "name": "krishi-sakhi",
  "version": "2.0.0",
  "description": "Digital Farming Assistant for Kerala Government",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "install:all": "npm install && npm --prefix frontend install",
    "dev": "npm --prefix frontend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "build": "npm --prefix frontend run build",
    "preview": "npm --prefix frontend run preview",
    "clean": "rm -rf node_modules frontend/node_modules frontend/dist"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "farming",
    "agriculture",
    "kerala",
    "government",
    "ai",
    "malayalam"
  ],
  "author": "Kerala Government Agriculture Department",
